{% macro checkbox(options = {
    uid: '',
    name: 'name',
    label: '',
    value: true,
    class: '',
    hint: '',
}) %}
    <label class="form-checkbox {{ options.class }}" for="{{ options.uid }}">
        <input
            type="checkbox"
            name="{{ options.name }}"
            value="true"
            id="{{ options.uid }}"
            {% if options.value %}checked{% endif %}/>
        <span>{{ options.label }}</span>
    </label>
    {% if options.hint %}
        <span class="form-hint">
            {{ options.hint }}
        </span>
    {% endif %}
{% endmacro %}

{% macro select(options = {
    uid: '',
    name: 'name',
    label: '',
    options: [],
    value: '',
    class: '',
    hint: '',
}) %}
    {% if options.label %}
        <label class="form-label" for="{{ options.uid }}">
            {{ options.label }}
        </label>
    {% endif %}
    <select
        class="form-select {{ options.class }}"
        name="{{ options.name }}"
        id="{{ options.uid }}">
        {% for option in options.options %}
            <option value="{{ option.value }}"
                {% if option.value == options.value %}selected{% endif %}>
                {{ option.label }}
            </option>
        {% endfor %}
    </select>
    {% if options.hint %}
        <span class="form-hint">
            {{ options.hint }}
        </span>
    {% endif %}
{% endmacro %}

{% macro editor(options = {
    uid: '',
    name: 'name',
    label: '',
    value: '',
    hint: '',
}) %}
    <div class="form-column overflow-x:hidden" x-data="editor()">
        {% if options.label %}
            <label class="form-label" for="{{ options.uid }}">
                {{ options.label }}
            </label>
        {% endif %}
        <textarea
            x-ref="editor"
            name="{{ options.name }}"
            id="{{ options.uid }}">{{ options.value }}</textarea>
        {% if options.hint %}
            <span class="form-hint">
                {{ options.hint }}
            </span>
        {% endif %}
    </div>
{% endmacro %}
