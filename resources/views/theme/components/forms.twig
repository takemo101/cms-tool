{% macro text(options = {
    uid: '',
    name: 'name',
    label: '',
    value: '',
    placeholder: '',
    class: '',
    hint: '',
}) %}
    {% if options.label %}
        <label class="form-label" for="{{ options.uid }}">
            {{ options.label }}
        </label>
    {% endif %}
    <input
        class="form-input"
        type="text"
        name="{{ options.name }}"
        value="{{ options.value }}"
        placeholder="{{ options.placeholder }}"
        id="{{ options.uid }}"/>
    {% if options.hint %}
        <span class="form-hint">
            {{ options.hint }}
        </span>
    {% endif %}
{% endmacro %}

{% macro number(options = {
    uid: '',
    name: 'name',
    label: '',
    value: '',
    min: null,
    max: null,
    step: null,
    placeholder: '',
    class: '',
    hint: '',
}) %}
    {% if options.label %}
        <label class="form-label" for="{{ options.uid }}">
            {{ options.label }}
        </label>
    {% endif %}
    <input
        class="form-input"
        type="number"
        {% if options.min is not null %}min="{{ options.min }}"{% endif %}
        {% if options.max is not null %}max="{{ options.max }}"{% endif %}
        {% if options.step is not null %}step="{{ options.step }}"{% endif %}
        name="{{ options.name }}"
        value="{{ options.value }}"
        placeholder="{{ options.placeholder }}"
        id="{{ options.uid }}"/>
    {% if options.hint %}
        <span class="form-hint">
            {{ options.hint }}
        </span>
    {% endif %}
{% endmacro %}

{% macro textarea(options = {
    uid: '',
    name: 'name',
    label: '',
    value: '',
    rows: 5,
    placeholder: '',
    class: '',
    hint: '',
}) %}
    {% if options.label %}
        <label class="form-label" for="{{ options.uid }}">
            {{ options.label }}
        </label>
