<div class="section-narrow-layout">
    <div class="flex justify-between items-center mb-8">
        <div class="section-header">
            <h3 class="section-header__title">
                RLATED
            </h3>
            <span class="section-header__subtitle">関連記事</span>
        </div>
    </div>
    <div class="flex flex-col sm:grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for related in relateds %}
            <article class="space-y-4">
                <a
                    href="{{ route('blog.detail', {id: related.id}) }}"
                    class="hover:opacity-60">
                    <div class="relative mb-4">
                        {% if showCategory and related.category %}
                            <span class="py-2 px-6 bg-white
                                absolute top-2 right-2
                                text-black text-sm">
                                {{ related.category.name }}
                            </span>
                        {% endif %}
                        <img
                            alt="{{ related.title }}"
                            class="object-cover
                                w-full sm:h-[220px] h-full"
                            src="{{ related.eyecatch ? microcms_img(related.eyecatch.url, { w: 600 }) : asset('empty.jpeg') }}" />
                    </div>
                    <p class="text-lg font-bold mb-4">
                        {{ related.title }}
                    </p>
                    {% if related.tags|length %}
                        <div class="tag mb-4">
                            {% for tag in related.tags %}
                                <span class="tag-label">
                                    {{ tag.name }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <p class="text-sm text-gray-500">
                        <i class="far fa-clock"></i>
                        {{ related.published_at|date('Y.m.d') }}
                    </p>
                </a>
            </article>
        {% else %}
            <p>記事はありません</p>
        {% endfor %}
    </div>
</div>
