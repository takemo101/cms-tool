{% extends 'cms-tool::layouts.dashboard' %}

{% block title %}トラッキングコード設定{% endblock %}

{% block current %}tracking{% endblock %}

{% import "cms-tool::components.forms" as forms %}
{% import "cms-tool::components.alerts" as alerts %}
{% import "cms-tool::components.dialogs" as dialogs %}

{% block content_right %}
<div class="card">
    <div class="card-header">
        <h2 class="card-header__title">トラッキングコード設定</h2>
        <hr class="divider" />
    </div>
    <div class="card-body" x-data="{ open: false }">
        {{ alerts.error() }}

        {{ form_open({
            route: 'admin.tracking.update',
            method: 'put',
            'x-ref': 'form',
        }) }}
            <div class="mb:30">
                <div class="form-column">
                    {{ forms.textarea({
                        name: 'head',
                        label:'Head',
                        value: tracking.head,
                        hint: '<head>タグ内に挿入されるコードです。Google Analyticsなどのトラッキングコードを設置する場合に利用します',
                    }) }}
                </div>
                <div class="form-column">
                    {{ forms.textarea({
                        name: 'body',
                        label:'Body',
                        value: tracking.body,
                        hint: '<body>タグ内に挿入されるコードです。Google Tag Managerなどのタグマネージャーを設置する場合に利用します',
                    }) }}
                </div>
                <div class="form-column">
                    {{ forms.textarea({
                        name: 'footer',
                        label:'Footer',
                        value: tracking.footer,
                        hint: '</body>直前に挿入されるコードです。Google Adsenseなどの広告コードを設置する場合に利用します',
                    }) }}
                </div>
            </div>
            <div class="t:right">
                {{ forms.button({
                    label: '更新',
                    class: 'form-btn--primary',
                    click: '$refs.form.reportValidity() && (open = true)',
                }) }}
            </div>
        {{ form_close() }}
        {{ dialogs.confirm({
            title: 'Update',
            message: '変更内容を保存しますか？',
            submit: '$refs.form.submit()',
        }) }}
    </div>
</div>
{% endblock %}
