<header>
    <nav>
        <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 relative z-50 flex justify-between py-8">
            <div class="relative z-10 flex items-center gap-16">
                <div class="flex lg:gap-10 gap-4">
                    <a
                        class="relative -my-2 -mx-3 rounded-lg px-3 py-2 text-sm text-gray-700 transition-colors delay-150 hover:text-gray-900 hover:delay-[0ms]"
                        href="{{ route('home') }}">
                        <span class="relative z-10">Home</span>
                    </a>
                    {% for c in share.categories %}
                        <a
                            class="relative -my-2 -mx-3 rounded-lg px-3 py-2 text-sm text-gray-700 transition-colors delay-150 hover:text-gray-900 hover:delay-[0ms]"
                            href="{{ route('blog.category', {
                                id: c.id
                            }) }}">
                            <span class="relative z-10">{{ c.name }}</span>
                        </a>
                    {% endfor %}
                    <a
                        class="relative -my-2 -mx-3 rounded-lg px-3 py-2 text-sm text-gray-700 transition-colors delay-150 hover:text-gray-900 hover:delay-[0ms]"
                        href="{{ route('fixed-page', {
                            path: 'about'
                        }) }}">
                        <span class="relative z-10">About</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>
