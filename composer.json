{
    "name": "takemo101/cms-tool",
    "description": "This is Chubby's CMS tool.",
    "keywords": [
        "php",
        "slim",
        "chubby",
        "framework"
    ],
    "authors": [
        {
            "name": "takemo101",
            "email": "takemo101@gmail.com"
        }
    ],
    "homepage": "https://github.com/takemo101/chubby",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Takemo101\\CmsTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "cms-module/cache": "^1.0",
        "cms-module/session": "^1.0",
        "cms-module/support": "^1.0",
        "cms-module/theme": "^1.0",
        "cms-module/view": "^1.0",
        "saloonphp/saloon": "^3.4",
        "takemo101/chubby": "^0.0.26"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.24",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^6.4|^7.0"
    },
    "scripts": {
        "lint": "pint -v",
        "test:lint": "pint --test --preset psr12 -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "modules/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
